#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>


struct student {
	char number[21];
	char name[21];
	double middlegrade;
	double lastgrade;
};

int main(void)
{
	int x;
	double y=0, z=0;
	while (1)
	{
		printf("학생수(최대 40) : ");
		scanf_s("%d", &x);
		if (x <= 40)
			break;
		printf("40명이 초과되었습니다.\n다시 입력해주세요.\n");
	}
	struct student *list;
	list = (struct student*)malloc(x * sizeof(struct student));
	
	

	FILE* fp = fopen("student.txt", "r");
	
	if (fp == NULL)
	{
		fprintf(stderr, "원본 파일 student.txt를 열 수 없습니다.\n");
		return 0;
	}

	char buffer[100],*ptr;

	int i = 0;
	int idx = 0;

	while (!feof(fp)) {
		i = 0;
		fgets(buffer, 100, fp);
		ptr = strtok(buffer, ",");
		while (ptr != NULL)
		{
			if (i == 0) {
				strcpy(list[idx].number, ptr);
			}
			else if (i == 1) {
				strcpy(list[idx].name, ptr);
			}
			else if (i == 2) {
				list[idx].middlegrade = atoi(ptr);
			}
			else if (i == 3) {
				list[idx].lastgrade = atoi(ptr);
			}
			i++;
			ptr = strtok(NULL, ",");
		}
		idx++;
	}
	fclose(fp);
	for (int j = 0; j < idx; j++)
	{
		y= y + ((list[j].middlegrade + list[j].lastgrade) /2);
	}
	for (int j = 0; j < idx; j++)
	{	
		z = (((y / x) - ((list[j].middlegrade + list[j].lastgrade) / 2)) * ((y / x) - ((list[j].middlegrade + list[j].lastgrade) / 2))) + z;
	}

	printf("전체 학생의 평균 점수 : %lf\n", y/x);
	z = z / x;
	z = sqrt(z);
	printf("전체 학생의 표준편차 : %lf\n", z);


	
	return 0;
}
