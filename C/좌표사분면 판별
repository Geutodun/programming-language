#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
	int a, b;
	printf("좌표(x y):");
	scanf("%d %d", &a, &b);

	if ((a > 0) && (b > 0))
		printf("1사분면");
	else if ((a < 0) && (b > 0))
		printf("2사분면");
	else if ((a < 0) && (b < 0))
		printf("3사분면");
	else if ((a > 0) && (b < 0))
		printf("4사분면");


}
