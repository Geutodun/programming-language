def people(R, N, A):    #기본 값
    print("이름:{0}\t나이:{1}\t주 언어:{2}".format(R, N, A))


people("정", 19, "파이썬")




def person(E, B=18, D="자바"):
    print("이름:{0}\t나이:{1}\t주 언어:{2}".format(E, B, D))



person("이")
person("박")

def H(F, G, K):   #키워드 값
    print(F, G, K)

H(F="정", G=4, K="언어")
H(G=3, K="C", F="강")
