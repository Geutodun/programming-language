R = 20   

def cost(discount): #할인
    global R    #밖의 R을 안에 문장에서도 쓰겠음
    R= R - discount
    print("가격:{0}".format(R))



print("원래 가격:{0}".format(R))
cost(3)
print("가격:{0}".format(R))




L = 10

def C(L, cost_L):
    L = L - cost_L
    print("로지텍 가격:{0}".format(L))
    return L

print("로지텍 가격:{0}".format(L))
L = C(L, 3)
print("로지텍 할인 가격:{0}".format(L))
