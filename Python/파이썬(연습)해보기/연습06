#문자열의 순서는 0부터 시작
x = "123456789"
 
print("번호:" + x[2])    #3번쨰 자리 숫자
print("번호2자리:" + x[0:2])  #첫번째 부터 3번쨰 숫자 직전까지
print("번호 거꾸로3자리:" + x[-4:-1])   #뒤에서 부터는 -1부터 시작 
 

G = "Game is Amazing"
print(G.lower())    # 다 소문자로
print(G.upper())    #다 대문자로 
print(len(G))        #문자열 세기
print(G.replace("Game", "VR"))     #단어 교체

x = G.index("a")     #몇번쨰에 있는지
print(x)

print(G.count("m"))        #번 있는지
